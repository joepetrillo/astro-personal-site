---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import RootLayout from "./RootLayout.astro";
import MetaInfo from "../components/MetaInfo.astro";

type Props = CollectionEntry<"blog">["data"] & {
  readingTime: string;
};

const { title, description, date, readingTime } = Astro.props;
---

<RootLayout title={title} description={description}>
  <article class="mb-20 mt-10">
    <div class="mb-10">
      <h1 class="text-balance text-3xl font-bold">
        {title}
      </h1>
      <div class="mt-3 flex flex-wrap items-center gap-x-8 gap-y-4">
        <MetaInfo icon="date"><FormattedDate date={date} /></MetaInfo>
        <MetaInfo icon="time">{readingTime}</MetaInfo>
      </div>
    </div>
    <div class="prose prose-zinc max-w-3xl">
      <slot />
    </div>
  </article>
</RootLayout>
